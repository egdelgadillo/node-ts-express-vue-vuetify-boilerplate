{
  "name": "boilerplate",
  "version": "1.0.0",
  "private": true,
  "workspaces": [
    "api",
    "ui"
  ],
  "scripts": {
    "api": "npm run dev --workspace=api",
    "ui": "npm run dev --workspace=ui",
    "build:api": "npm run build --workspace=api",
    "build:ui": "npm run build --workspace=ui",
    "lint": "npm run lint --workspaces",
    "format": "prettier --write \"**/*.{js,jsx,ts,tsx,json,css,scss,md,vue}\"",
    "format:check": "prettier --check \"**/*.{js,jsx,ts,tsx,json,css,scss,md,vue}\"",
    "migrate:latest": "npm run migrate:latest --workspace=api",
    "migrate:rollback": "npm run migrate:rollback --workspace=api",
    "migrate:make": "npm run migrate:make --workspace=api",
    "seed:run": "npm run seed:run --workspace=api",
    "seed:make": "npm run seed:make --workspace=api"
  },
  "devDependencies": {
    "prettier": "^3.2.5",
    "typescript": "^5.3.3",
    "eslint": "^8.57.0"
  }
}
